# Server Port
PORT=5000

# MongoDB Connection String (Required)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/prescripto

# Groq API Key for AI Extractor (Required)
GROQ_API_KEY=your_groq_api_key_here

# JWT Secret for Auth (Required)
JWT_SECRET=your_jwt_secret_phrase

# Allowed Frontend URL (CORS) - Set to production domain in production, or * for dev
FRONTEND_URL=http://localhost:5173

# Twilio SMS Credentials (Optional / Required if SMS used)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
